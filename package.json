{
    "name": "rtlola",
    "displayName": "rtlola",
    "description": "Support for the stream-based specification language RTLola",
    "version": "0.1.0",
    "publisher": "rtlola-team",
    "icon": "rtlola_icon.png",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages", "Snippets", "Linters"
    ],
    "activationEvents": [
        "onLanguage:rtlola"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "rtlola",
                "aliases": [
                    "RTLola",
                    "rtlola"
                ],
                "extensions": [
                    ".lola",
                    ".rtlola"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rtlola",
                "scopeName": "source.rtlola",
                "path": "./syntaxes/rtlola.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "rtlola",
                "scopeName": "source.rtlola",
                "path": "./snippets/snippets.json"
            }
        ],
		"configuration": {
			"type": "object",
			"title": "RTLola configuration",
			"properties": {
				"rtlolaLS.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"rtlolaLS.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc --build",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "watch": "tsc --build --watch"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0",
        "ws": "^7.4.3",
        "rtlola-wasm": "file:./rtlola-wasm/"
    },
    "devDependencies": {
        "@types/node": "^14.14.0",
        "@types/vscode": "^1.52.0",
        "@types/ws": "^7.4.0",
        "@typescript-eslint/eslint-plugin": "^4.15.0",
        "@typescript-eslint/parser": "^4.15.0",
        "eslint": "^7.0.0",
        "typescript": "^4.4.4"
    },
    "bugs": {
        "url": "https://github.com/MalteSchledjewski/vscode-rtlola/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MalteSchledjewski/vscode-rtlola.git"
    },
    "homepage": "https://github.com/MalteSchledjewski/vscode-rtlola/blob/main/README.md"
}
